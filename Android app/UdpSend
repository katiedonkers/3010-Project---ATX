package com.example.katie.atx;

import android.content.Intent;
import android.support.v7.app.AppCompatActivity;
import android.util.Log;
import android.widget.EditText;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.SocketException;
import java.lang.*;
import java.net.SocketTimeoutException;

public class UdpSend extends AppCompatActivity implements Runnable  {

    public static final String EXTRA_MESSAGE = "com.example.myfirstapp.MESSAGE";
    String ip= "192.168.43.231";
    String msg;
    public UdpSend(String msg){
        this.msg = msg;
    }
    @Override
    public void run() {
        try{

            DatagramSocket serverSocket = new DatagramSocket(9878);
            byte[] receiveData = new byte[1024];
            byte[] sendData = new byte[1024];
            boolean running = true;
            while(running)
            {

                InetAddress IPAddress = InetAddress.getByName(ip);
                int port = 1050;
                //String capitalizedSentence = "0karimkarim";
                sendData = msg.getBytes();
                DatagramPacket sendPacket =
                        new DatagramPacket(sendData, sendData.length, IPAddress, port);
                serverSocket.send(sendPacket);
                DatagramPacket receivePacket = new DatagramPacket(receiveData, receiveData.length);
                serverSocket.receive(receivePacket);


                String stringBuffer = new String( receivePacket.getData());
                msg = stringBuffer;
                stringBuffer.charAt(0);
                //dealWithPacket(stringBuffer);
//                if(stringBuffer.charAt(0)== '9'){
//                    System.out.println("The first bye of the packet it: " + stringBuffer.charAt(0));
//                }else if (stringBuffer.charAt(0) == '5'){
//                    System.out.println("The first bye of the packet it: " + stringBuffer.charAt(0));
//                }else if (stringBuffer.charAt(0) == '8'){
//                    System.out.println("The first bye of the packet it: " + stringBuffer.charAt(0));
//                }else{
//                    System.out.println("couldn't parse, first byte is: " + stringBuffer.charAt(0));
//                }

                String sentence = new String( receivePacket.getData());
                System.out.println("RECEIVEDDDDD: " + sentence);
                running = false;
            }
        }catch (Exception e){
            Log.e(" UDP client Exception", "error: ", e);
        }

    }

    public String getMsg(){
        return this.msg;
    }
    




}





